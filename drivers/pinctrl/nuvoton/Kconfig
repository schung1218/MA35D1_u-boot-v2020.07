	depends on MA35D0
	default y
	help
	  Enable support pin control functions for NVT SoCs.

config SPL_PINCTRL_MA35D0
	bool "Support NUVOTON MA35D0 pin controllers in SPL"
	depends on SPL_PINCTRL_GENERIC
	depends on MA35D0
	default y
	help
	  This option is an SPL-variant of the PINCTRL_NVT option.
	  
